       PROJECT_CODE                            VARCHAR2(30)
      ,BUSINESS_GROUP                          VARCHAR2(30)
      ,MODEL                                   VARCHAR2(30)
      ,MANUFACTURING_PLANT                     VARCHAR2(30)
      ,DOC_CODE                                VARCHAR2(30)
      ,STAGE                                   VARCHAR2(5)
      ,TOTAL_CDOC_COUNT                        NUMBER
      ,DATA_DATE                               VARCHAR2(8)
