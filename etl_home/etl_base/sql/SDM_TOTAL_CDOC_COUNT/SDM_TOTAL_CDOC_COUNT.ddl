COMMENT ON COLUMN SDM.SDM_TOTAL_CDOC_COUNT.TOTAL_CDOC_COUNT IS 'C 文號總數量__';
COMMENT ON COLUMN SDM.SDM_TOTAL_CDOC_COUNT.DATA_DATE IS 'DataDate';
