
CALL SQLEXT.SP_DROP_IF_EXISTS ('SDM', 'SDM_CTF_EXPENSE');
CREATE TABLE SDM.SDM_CTF_EXPENSE (
       BUSINESS_GROUP                          VARCHAR2(30) NOT NULL
      ,PROJECT_CODE                            VARCHAR2(30) NOT NULL
      ,MODEL                                   VARCHAR2(30) NOT NULL
      ,MANUFACTURING_PLANT                     VARCHAR2(30) NOT NULL
      ,CTF_EXPENSE                             VARCHAR2(30)
      ,DATA_DATE                               VARCHAR2(8)
      ,TBL_UPD_TIME                            DATE
      ,TBL_UPD_SRC                             VARCHAR2(100)
);

ALTER TABLE SDM.SDM_CTF_EXPENSE nologging;

--PK Create Script
ALTER TABLE SDM.SDM_CTF_EXPENSE ADD CONSTRAINT SDM_CTF_EXPENSE_X PRIMARY KEY(BUSINESS_GROUP,PROJECT_CODE,MODEL,MANUFACTURING_PLANT) INITIALLY IMMEDIATE;

--Comments Create Script 
COMMENT ON TABLE SDM.SDM_CTF_EXPENSE IS '認證費用';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.BUSINESS_GROUP IS '標準-事業群';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.PROJECT_CODE IS '專案代碼';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.MODEL IS 'Model';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.MANUFACTURING_PLANT IS '標準-製造廠';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.CTF_EXPENSE IS '認證費用';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.DATA_DATE IS 'DataDate';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.TBL_UPD_TIME IS 'Updated Time';
COMMENT ON COLUMN SDM.SDM_CTF_EXPENSE.TBL_UPD_SRC IS 'Updated Source';

